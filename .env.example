# ============================================
# CONFLUENCE - WARM INTRODUCTIONS PLATFORM
# Environment Variables Configuration
# ============================================

# DATABASE CONFIGURATION
# PostgreSQL connection string (includes host, port, user, password, database)
DATABASE_URL=postgresql://user:password@localhost:5432/confluence

# PostgreSQL Individual Connection Details (alternative to DATABASE_URL)
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your_password
PGDATABASE=confluence

# AI/LLM CONFIGURATION
# Deepseek API key for contact enrichment and natural language search
DEEPSEEK_API_KEY=sk_deepseek_api_key_here

# SESSION CONFIGURATION
# Secret key for session encryption and management
SESSION_SECRET=your_secure_session_secret_here

# REPLIT DEPLOYMENT (Auto-populated on Replit)
REPLIT_DOMAINS=your-app-name.replit.dev
REPLIT_DEV_DOMAIN=your-app-name.replit.dev
REPL_ID=your_replit_project_id

# APPLICATION SETTINGS
NODE_ENV=development
